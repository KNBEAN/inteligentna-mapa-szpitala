<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MapActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/app_bar_map">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/samplemap" />

    <ImageButton
        android:id="@+id/floors_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/button_round"
        android:src="@drawable/ic_layers_black_24dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/floors_button">

        <LinearLayout
            android:id="@+id/patient_assistant_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/patient_assistant_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="@color/colorPrimaryLight"
                app:layout_constraintBottom_toTopOf="@+id/tools_button"
                app:layout_constraintEnd_toEndOf="@+id/food_button"
                app:layout_constraintStart_toStartOf="@+id/food_button"
                app:layout_constraintTop_toBottomOf="@+id/food_button"
                app:srcCompat="@drawable/ic_accessibility_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/food_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/food_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/patient_assistant_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wc_button"
                app:srcCompat="@drawable/ic_restaurant_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wc_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/wc_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/food_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floors_button"
                app:srcCompat="@drawable/ic_wc_black_24dp"
                tools:backgroundTint="@color/colorPrimaryDark"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tools_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/tools_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/patient_assistant_button"
                app:layout_constraintTop_toBottomOf="@+id/patient_assistant_button"
                app:srcCompat="@drawable/ic_widgets_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
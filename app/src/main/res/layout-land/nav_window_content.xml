<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/nav_window">


    <ImageButton
        android:id="@+id/oppositeArrowsButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="3dp"
        android:onClick="changeWithAnim"
        android:rotation="90"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewTo"
        app:layout_constraintStart_toEndOf="@+id/textViewStart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/opposite_arrows" />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:clickable="true"
        android:gravity="start"
        android:hint="@string/cel"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Do"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDestination"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:clickable="true"
        android:gravity="start"
        android:hint="@string/start"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textViewFrom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFrom"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Z"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkStairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="4dp"
        android:text="Schody"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <Button
        android:id="@+id/startButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="5dp"
        android:text="Start"
        android:textColor="@color/fontColorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDestination" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="58dp" />


</android.support.constraint.ConstraintLayout>